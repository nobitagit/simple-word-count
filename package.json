{
  "name": "es6-init",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "postinstall": "mkdir dist; npm run build",
    "clean": "rm -rf dist",
    "build": "browserify src/index.js -o dist/bundle.js",
    "build:w": "watchify src/index.js -o dist/bundle.js",
    "build:html": "html-dist src/index.html --remove-all --insert bundle.js -o dist/index.html"
  },
  "keywords": [],
  "author": "Nobita",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "html-dist": "^0.1.0",
    "watchify": "^3.6.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
